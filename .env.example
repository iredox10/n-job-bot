# Appwrite Configuration
APPWRITE_PROJECT_ID = "your_project_id"
APPWRITE_PROJECT_NAME = "your_project_name"
APPWRITE_ENDPOINT = "https://cloud.appwrite.io/v1"
DATABASE_ID = "your_database_id"
JOBS_COLLECTION_ID = "your_jobs_collection_id"
PROFILE_COLLECTION_ID = "your_profile_collection_id"

APPWRITE_API_KEY = "your_appwrite_api_key"

# Gmail Configuration (REQUIRED: MUST USE APP PASSWORD)
# 1. Go to https://myaccount.google.com/security
# 2. Search for "App Passwords"
# 3. Create one for "Mail" and use the 16-character code below
GMAIL_USER = "your_email@gmail.com"
GMAIL_APP_PASSWORD = "your_16_char_app_password"

# GitHub Configuration (REQUIRED for AI tailoring)
# 1. Go to GitHub Settings > Developer Settings > Personal Access Tokens (Fine-grained)
# 2. Enable "GitHub Models" or "Copilot" permissions
GITHUB_TOKEN = "your_github_token"

# Bot Logic
APPROVAL_MODE = true
JOB_KEYWORDS = "Web Developer"

# Telegram Configuration (optional)
TELEGRAM_BOT_TOKEN = ""
TELEGRAM_CHAT_ID = ""

# WhatsApp Configuration (optional - via Meta Business API)
WHATSAPP_TOKEN = ""
WHATSAPP_PHONE_ID = ""
WHATSAPP_RECIPIENT = ""
